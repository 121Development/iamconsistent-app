# Open Graph images - allow CORS for social media crawlers
/og-image.png
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable

/twitter-image.png
  Access-Control-Allow-Origin: *
  Cache-Control: public, max-age=31536000, immutable

# Cache static assets with hash in filename forever
/assets/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Cache CSS files
/*.css
  Cache-Control: public, max-age=31536000, immutable

# Cache JavaScript files
/*.js
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable
/*.ttf
  Cache-Control: public, max-age=31536000, immutable

